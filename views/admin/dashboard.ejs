<% 
  var title = 'Dashboard';
  var page = 'dashboard';
%>
<%- include('../layout', { title, page, user, body: `
  <h1>Welcome, ${user.username}!</h1>
  <%- include('../partials/card', { title: 'Quick Stats', body: `
    <p>Content management system for MEHAAL TECH AI website.</p>
    <div class='dashboard-stats'>
      <div class='dashboard-stat'><div class='dashboard-stat-value'>3</div><div>Projects</div></div>
      <div class='dashboard-stat'><div class='dashboard-stat-value'>18</div><div>Features</div></div>
      <div class='dashboard-stat'><div class='dashboard-stat-value'>2</div><div>Team Members</div></div>
    </div>
  ` }) %>
  <%- include('../partials/card', { title: 'Quick Actions', body: `
    <div class='dashboard-actions'>
      <a href='/admin/projects' class='btn'>Manage Projects</a>
      <a href='/admin/team' class='btn btn-secondary'>Manage Team</a>
      ${user.role === 'admin' ? `<a href='/admin/settings' class='btn btn-secondary'>Settings</a>` : ''}
    </div>
  ` }) %>
  <%- include('../partials/card', { title: 'API Endpoints', body: `
    <ul class='api-list'>
      <li><code>GET /api/projects</code> - Get all projects with features</li>
      <li><code>GET /api/team</code> - Get team members</li>
      <li><code>GET /api/settings</code> - Get site settings</li>
    </ul>
  ` }) %>
` }) %>
