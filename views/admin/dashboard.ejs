<% 
  var title = 'Dashboard';
  var page = 'dashboard';
  var body = `
    <h1>Welcome, ${user.username}!</h1>
    
    <div class="card">
      <h2>Quick Stats</h2>
      <p>Content management system for MEHAAL TECH AI website.</p>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; margin-top: 2rem;">
        <div style="text-align: center;">
          <div style="font-size: 2.5rem; color: #a855ff; font-weight: 700;">3</div>
          <div>Projects</div>
        </div>
        <div style="text-align: center;">
          <div style="font-size: 2.5rem; color: #a855ff; font-weight: 700;">18</div>
          <div>Features</div>
        </div>
        <div style="text-align: center;">
          <div style="font-size: 2.5rem; color: #a855ff; font-weight: 700;">2</div>
          <div>Team Members</div>
        </div>
      </div>
    </div>
    
