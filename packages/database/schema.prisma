datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- ENUMS (Hardcoded Logic) ---
enum Role {
  CLIENT
  FRANCHISE
  PARTNER
  OPERATOR
  ADMIN
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
}

// --- CORE SAAS MODELS ---

model Tenant {
  id           String   @id @default(cuid())
  slug         String   @unique // Subdomain (e.g., tesla.mysaas.com)
  name         String
  
  // Branding (Dynamic Theme Engine)
  primaryColor String   @default("#000000")
  logoUrl      String?
  
  createdAt    DateTime @default(now())
  users        User[]
  apiKeys      ApiKey[]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String   // Hashed
  role      Role     @default(CLIENT)
  
  tenantId  String?
  tenant    Tenant?  @relation(fields: [tenantId], references: [id])
  
  // AI Usage Logic
  plan      Plan     @default(FREE)
  credits   Int      @default(100) // Token usage tracking
  
  createdAt DateTime @default(now())
}

model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique // sk_live_...
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  isActive  Boolean  @default(true)
}

// --- AI JOBS (For Queue System) ---
model Job {
  id        String   @id @default(cuid())
  userId    String
  type      String   // "SPEECH_PROCESSING", "3D_RENDER"
  status    String   // "PENDING", "COMPLETED", "FAILED"
  result    String?  // URL to S3 or Text Output
  createdAt DateTime @default(now())
}
