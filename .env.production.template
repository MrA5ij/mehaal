# Environment Variables Template
# Copy to .env.production and fill in actual values

# ==================== FRONTEND ====================
VITE_API_URL=https://api.mehaal.ai
VITE_FOUNDER_KEY=your_secure_founder_key_here_change_in_production
VITE_ENV=production

# ==================== BACKEND ====================
# Database
DATABASE_URL=postgresql://username:password@prod-db-host:5432/mehaal_prod
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Environment
ENVIRONMENT=production
LOG_LEVEL=info

# Security
FOUNDER_KEY=your_secure_founder_key_here_change_in_production
ALLOWED_ORIGINS=https://mehaal.ai,https://www.mehaal.ai,https://cms.mehaal.ai
ENABLE_CORS=true
SECURE_COOKIES=true

# Service URLs
CMS_URL=https://cms.mehaal.ai
MEDIA_UPLOAD_PATH=/uploads

# Optional: Third-party services
# CLOUDFLARE_ZONE_ID=xxxxx
# CLOUDFLARE_API_TOKEN=xxxxx
# SENTRY_DSN=https://xxxx@sentry.io/xxxxx

# ==================== DEPLOYMENT ====================
PORT=8000
WORKERS=4
