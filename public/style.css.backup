:root {
  --space-black: #02020a;
  --space-highlight: #050519;
  --text-primary: #f4f4ff;
  --text-muted: rgba(244, 244, 255, 0.7);
  --violet-accent: #a855ff;
  --blue-accent: #4f46e5;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
  background: radial-gradient(ellipse at center, #1a0f3d 0%, #02020a 70%);
  color: var(--text-primary);
  overflow-x: hidden;
  overflow-y: auto;
  margin: 0;
  padding: 0;
  line-height: 1.6;
}

.hero {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  overflow: hidden;
  z-index: 1;
}

.hero-video {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
  animation: video-fade 1s ease-out;
}

.hero-video-2 {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
  opacity: 0;
  pointer-events: none;
}

.hero-video.fade-out {
  animation: video-fade-out var(--fade-duration, 0.5s) ease-out forwards;
}

.hero-video-2.fade-in {
  animation: video-fade-in var(--fade-duration, 0.5s) ease-out forwards;
}

@keyframes video-fade {
  from {
    opacity: var(--fade-opacity, 0.4);
  }
  to {
    opacity: 1;
  }
}

@keyframes video-fade-out {
  from {
    opacity: 1;
  }
  to {
    opacity: var(--fade-opacity, 0.4);
  }
}

@keyframes video-fade-in {
  from {
    opacity: var(--fade-opacity, 0.4);
  }
  to {
    opacity: 1;
  }
}

.hero-content {
  position: relative;
  padding: 2rem;
  max-width: 800px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2.5rem;
  z-index: 2;
}

.logo-container {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.headline-container {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-strips,
.hero-waves {
  display: none;
}

.hero-strips .strip {
  position: absolute;
  inset: -20%;
  background: radial-gradient(circle at 5% 0%, rgba(76, 81, 191, 0.15), transparent 55%),
    radial-gradient(circle at 90% 0%, rgba(139, 92, 246, 0.4), transparent 60%),
    radial-gradient(circle at 40% 90%, rgba(196, 116, 255, 0.45), transparent 60%);
  opacity: 0.6;
  filter: blur(14px);
  transform-origin: center;
  mix-blend-mode: screen;
  animation: aurora-shift 16s linear infinite;
}

.hero-strips .strip:nth-child(1) {
  background: radial-gradient(circle at -5% 0%, rgba(88, 28, 135, 0.18), transparent 55%),
    radial-gradient(circle at 110% 10%, rgba(147, 51, 234, 0.7), transparent 60%),
    radial-gradient(circle at 35% 120%, rgba(216, 180, 254, 0.4), transparent 60%);
  animation-duration: 18s;
  animation-delay: -3s;
}

.hero-strips .strip:nth-child(2) {
  background: radial-gradient(circle at 0% 5%, rgba(67, 56, 202, 0.22), transparent 60%),
    radial-gradient(circle at 80% 0%, rgba(168, 85, 255, 0.75), transparent 60%),
    radial-gradient(circle at 30% 120%, rgba(219, 39, 119, 0.36), transparent 60%);
  animation-duration: 22s;
  animation-delay: -8s;
}

.hero-strips .strip:nth-child(3) {
  background: radial-gradient(circle at 0% 15%, rgba(76, 106, 245, 0.3), transparent 60%),
    radial-gradient(circle at 100% 25%, rgba(129, 140, 248, 0.75), transparent 55%),
    radial-gradient(circle at 50% 120%, rgba(236, 72, 153, 0.46), transparent 60%);
  animation-duration: 26s;
  animation-delay: -12s;
}

.hero-strips .strip:nth-child(4) {
  background: radial-gradient(circle at 0% 30%, rgba(126, 34, 206, 0.26), transparent 55%),
    radial-gradient(circle at 110% 18%, rgba(129, 140, 248, 0.7), transparent 60%),
    radial-gradient(circle at 60% 130%, rgba(168, 85, 255, 0.52), transparent 60%);
  animation-duration: 24s;
  animation-delay: -16s;
}

.hero-strips .strip:nth-child(5) {
  background: radial-gradient(circle at -10% 8%, rgba(91, 33, 182, 0.22), transparent 60%),
    radial-gradient(circle at 90% 0%, rgba(129, 140, 248, 0.6), transparent 60%),
    radial-gradient(circle at 45% 110%, rgba(217, 70, 239, 0.4), transparent 60%);
  animation-duration: 30s;
  animation-delay: -20s;
}

@keyframes aurora-shift {
  0% {
    transform: translate3d(12%, 4%, 0) skewX(-14deg) scale(1.18);
  }
  25% {
    transform: translate3d(0, -2%, 0) skewX(-8deg) scale(1.1);
  }
  50% {
    transform: translate3d(-10%, 1%, 0) skewX(-3deg) scale(1.14);
  }
  75% {
    transform: translate3d(-2%, 5%, 0) skewX(-11deg) scale(1.2);
  }
  100% {
    transform: translate3d(12%, 4%, 0) skewX(-14deg) scale(1.18);
  }
}

.hero-waves {
  position: absolute;
  inset: 0;
  pointer-events: none;
  z-index: -1;
}

.hero-waves .wave {
  position: absolute;
  right: -30%;
  width: 40%;
  height: 2px;
  background: linear-gradient(90deg, transparent, rgba(192, 132, 252, 0.95), rgba(250, 250, 255, 0.95));
  box-shadow: 0 0 10px rgba(192, 132, 252, 0.9), 0 0 26px rgba(129, 140, 248, 0.85);
  opacity: 0.7;
  border-radius: 999px;
  transform-origin: center;
  mix-blend-mode: screen;
}

.hero-waves .wave:nth-child(1) {
  top: 28%;
  height: 2px;
  animation: wave-line-1 9s linear infinite;
}

.hero-waves .wave:nth-child(2) {
  top: 42%;
  height: 3px;
  animation: wave-line-2 13s linear infinite;
  opacity: 0.55;
}

.hero-waves .wave:nth-child(3) {
  top: 58%;
  height: 1px;
  animation: wave-line-3 7s linear infinite;
}

.hero-waves .wave:nth-child(4) {
  top: 72%;
  height: 2px;
  animation: wave-line-4 11s linear infinite;
  opacity: 0.6;
}

@keyframes wave-line-1 {
  0% {
    transform: translate3d(0, 0, 0) skewX(-10deg) scaleX(1);
  }
  100% {
    transform: translate3d(-150%, -6px, 0) skewX(-4deg) scaleX(1.04);
  }
}

@keyframes wave-line-2 {
  0% {
    transform: translate3d(10%, 0, 0) skewX(-14deg) scaleX(1.05);
  }
  100% {
    transform: translate3d(-170%, 4px, 0) skewX(-8deg) scaleX(1.1);
  }
}

@keyframes wave-line-3 {
  0% {
    transform: translate3d(-5%, 0, 0) skewX(-8deg) scaleX(0.96);
  }
  100% {
    transform: translate3d(-160%, -3px, 0) skewX(-3deg) scaleX(1.02);
  }
}

@keyframes wave-line-4 {
  0% {
    transform: translate3d(5%, 0, 0) skewX(-11deg) scaleX(1.02);
  }
  100% {
    transform: translate3d(-155%, 6px, 0) skewX(-5deg) scaleX(1.06);
  }
}

.hero-logo {
  width: min(50vw, 600px);
  height: auto;
  filter: drop-shadow(0 0 25px rgba(168, 85, 255, 0.8)) drop-shadow(0 0 4px rgba(100, 10, 150, 0.10));
  animation: logo-breathe 7s ease-in-out infinite;
}

.hero-headline {
  font-size: clamp(2.8rem, 5vw, 4.2rem);
  font-weight: 500;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  margin: 10;
  background: linear-gradient(135deg, rgba(244, 244, 255, 0.95), rgba(168, 85, 255, 0.9));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  filter: drop-shadow(0 0 20px rgba(168, 85, 255, 0.7));
}

@keyframes logo-breathe {
  0%,
  100% {
    transform: translateY(0px) scale(1);
  }
  50% {
    transform: translateY(-6px) scale(1.015);
  }
}

@media (max-width: 640px) {
  .hero-content {
    padding: 2.5rem;
  }
  .hero-logo {
    width: 48vw;
    max-width: 180px;
  }
}

/* Settings Panel Styles */
.settings-panel {
  position: fixed;
  top: 0;
  right: -420px;
  width: 400px;
  height: 100vh;
  background: rgba(2, 2, 10, 0.98);
  backdrop-filter: blur(10px);
  border-left: 2px solid rgba(168, 85, 255, 0.5);
  z-index: 1000;
  transition: right 0.3s ease;
  overflow-y: auto;
  padding: 0;
}

.settings-panel.open {
  right: 0;
}

.settings-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 1px solid rgba(168, 85, 255, 0.3);
  position: sticky;
  top: 0;
  background: rgba(2, 2, 10, 0.95);
}

.settings-header h2 {
  margin: 0;
  font-size: 1.3rem;
  color: #f5f5ff;
}

.settings-close {
  background: none;
  border: none;
  color: #f5f5ff;
  font-size: 1.5rem;
  cursor: pointer;
  padding: 0.5rem;
  transition: color 0.2s;
}

.settings-close:hover {
  color: rgba(168, 85, 255, 0.8);
}

.settings-content {
  padding: 1.5rem;
}

.settings-section {
  margin-bottom: 2.5rem;
  padding-bottom: 1.5rem;
  border-bottom: 1px solid rgba(168, 85, 255, 0.2);
}

.section-title {
  font-size: 0.95rem;
  font-weight: 600;
  color: rgba(168, 85, 255, 0.9);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin: 0 0 1.2rem 0;
}

.settings-group {
  margin-bottom: 1.2rem;
  display: flex;
  flex-direction: column;
  gap: 0.6rem;
}

.settings-group label {
  font-size: 0.85rem;
  color: rgba(245, 245, 255, 0.85);
  font-weight: 500;
}

.settings-group input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
  margin-right: 0.5rem;
  accent-color: rgba(168, 85, 255, 0.8);
}

.settings-group input[type="range"] {
  width: 100%;
  height: 6px;
  border-radius: 3px;
  background: rgba(168, 85, 255, 0.2);
  outline: none;
  -webkit-appearance: none;
  appearance: none;
}

.settings-group input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  background: rgba(168, 85, 255, 0.9);
  cursor: pointer;
  box-shadow: 0 0 10px rgba(168, 85, 255, 0.6);
  transition: all 0.2s;
}

.settings-group input[type="range"]::-webkit-slider-thumb:hover {
  background: rgba(168, 85, 255, 1);
  box-shadow: 0 0 20px rgba(168, 85, 255, 0.9);
}

.settings-group input[type="range"]::-moz-range-thumb {
  width: 16px;
  height: 16px;
  border-radius: 50%;
  background: rgba(168, 85, 255, 0.9);
  cursor: pointer;
  box-shadow: 0 0 10px rgba(168, 85, 255, 0.6);
  border: none;
  transition: all 0.2s;
}

.settings-group input[type="color"] {
  width: 100%;
  height: 40px;
  border: 1px solid rgba(168, 85, 255, 0.5);
  border-radius: 6px;
  cursor: pointer;
  background: #1a0f2e;
}

.settings-actions {
  display: flex;
  gap: 1rem;
  margin-top: 2rem;
  flex-wrap: wrap;
}

.settings-reset,
.settings-save,
.settings-toggle {
  padding: 0.9rem 1.2rem;
  background: rgba(168, 85, 255, 0.8);
  color: #f5f5ff;
  border: none;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.settings-reset:hover,
.settings-save:hover,
.settings-load:hover,
.settings-save-btn:hover {
  background: rgba(168, 85, 255, 1);
  box-shadow: 0 0 20px rgba(168, 85, 255, 0.6);
}

.settings-reset {
  flex: 1;
  min-width: 100px;
}

.settings-load {
  flex: 1;
  min-width: 100px;
  padding: 0.9rem 1.2rem;
  background: rgba(76, 110, 245, 0.7);
  color: #f5f5ff;
  border: none;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.settings-load:hover {
  background: rgba(76, 110, 245, 1);
  box-shadow: 0 0 20px rgba(76, 110, 245, 0.6);
}

.settings-save-btn {
  flex: 1;
  min-width: 100px;
  padding: 0.9rem 1.2rem;
  background: rgba(34, 197, 94, 0.7);
  color: #f5f5ff;
  border: none;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.settings-save-btn:hover {
  background: rgba(34, 197, 94, 1);
  box-shadow: 0 0 20px rgba(34, 197, 94, 0.6);
}

.settings-save {
  flex: 1;
  min-width: 100px;
  background: rgba(219, 39, 119, 0.7);
}

.settings-save:hover {
  background: rgba(219, 39, 119, 1);
  box-shadow: 0 0 20px rgba(219, 39, 119, 0.6);
}

.settings-toggle {
  position: fixed;
  bottom: 2rem;
  right: 2rem;
  width: 50px;
  height: 50px;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.3rem;
  border-radius: 50%;
  z-index: 999;
}

.settings-toggle:hover {
  box-shadow: 0 0 30px rgba(168, 85, 255, 0.7);
  transform: scale(1.05);
}

.settings-panel.hidden,
.settings-toggle.hidden {
  display: none;
}
