# MEHAAL TECH AI - Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git (add to .gitignore)

# ===== Server Configuration =====
NODE_ENV=production
PORT=3000
APP_PORT=3000
HOST=localhost

# ===== Session Configuration =====
SESSION_SECRET=change-this-to-a-random-secure-string-for-production

# ===== Email Configuration (for Contact Forms) =====
# Gmail Setup: https://support.google.com/accounts/answer/185833 (use App Password)
# Other Providers: Get SMTP credentials from your email service

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-not-regular-password
EMAIL_FROM=noreply@mehaal.tech

# ===== Database Configuration (MySQL/MariaDB) =====
# Local Development: Use localhost
# cPanel Hosting: Check cPanel > MySQL Databases for exact hostname
# MariaDB also works (drop-in MySQL replacement)

DB_HOST=localhost
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=your_database_name
DB_PORT=3306
DB_CONNECTION_LIMIT=10

# ===== Admin Panel Configuration =====
# Initial credentials - SET STRONG VALUES IN PRODUCTION!
ADMIN_USERNAME=your-admin-username
ADMIN_PASSWORD=your-strong-password-here
ADMIN_EMAIL=your-email@example.com

# ===== Site Configuration =====
SITE_NAME=MEHAAL TECH AI
SITE_URL=https://mehaal.tech
SITE_TIMEZONE=UTC

# ===== Email Addresses for Contact Form Routing =====
SUPPORT_EMAIL=support@mehaal.tech
BUSINESS_EMAIL=business@mehaal.tech
FOUNDER_EMAIL=founder@mehaal.tech
TECH_EMAIL=tech@mehaal.tech

# ===== Feature Flags =====
ENABLE_NEWSLETTER=true
ENABLE_CONTACT_FORM=true
ENABLE_CUSTOM_FEATURES=true
ENABLE_ADMIN_PANEL=true
MAINTENANCE_MODE=false

# ===== Analytics (Optional) =====
GOOGLE_ANALYTICS_ID=
MICROSOFT_CLARITY_ID=
SEGMENT_WRITE_KEY=

# ===== Security Configuration =====
CORS_ORIGIN=https://mehaal.tech
CORS_CREDENTIALS=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
CSRF_PROTECTION=true

# ===== Logging Configuration =====
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=/var/log/mehaal/app.log

# ===== Backup Configuration (Optional) =====
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30

# ===== JWT Configuration (Optional, for API tokens) =====
JWT_SECRET=generate-a-random-jwt-secret-minimum-32-characters
JWT_EXPIRATION=7d

# ===== Third-party Services (Optional) =====
# Slack notifications, Webhooks, etc.
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ===== Content Security Policy =====
CSP_ENABLED=true
CSP_REPORT_URI=/csp-report

# ===== Development Tools (Remove in production) =====
DEBUG=false
VERBOSE_LOGGING=false
ALLOW_ORIGIN_LOCALHOST=false
